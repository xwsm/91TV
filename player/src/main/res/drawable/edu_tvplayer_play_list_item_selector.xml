<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid 
                android:color="@color/edu_tvplayer_btn_pressed"/>
            <corners
                android:radius="@dimen/x4"/>
        </shape>
    </item>
    
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid 
                android:color="@color/edu_tvplayer_btn_focused"/>
            <corners
                android:radius="@dimen/x4" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <solid 
                android:color="@color/edu_tvplayer_btn_normal"/>
            <corners
                android:radius="@dimen/x4" />
        </shape>
    </item>
</selector>